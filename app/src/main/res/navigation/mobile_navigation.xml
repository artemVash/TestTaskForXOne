<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_location">

    <fragment
        android:id="@+id/navigation_setting"
        android:name="by.vashkevich.testtaskforxone.ui.setting.SettingFragment"
        android:label="@string/title_setting"
        tools:layout="@layout/fragment_setting" />

    <fragment
        android:id="@+id/navigation_money"
        android:name="by.vashkevich.testtaskforxone.ui.money.MoneyFragment"
        android:label="@string/title_money"
        tools:layout="@layout/fragment_money" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="by.vashkevich.testtaskforxone.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/navigation_location"
        android:name="by.vashkevich.testtaskforxone.ui.location.LocationFragment"
        android:label="@string/title_location"
        tools:layout="@layout/fragment_location" >
        <action
            android:id="@+id/showImageFragment"
            app:destination="@id/imageFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageFragment"
        android:name="by.vashkevich.testtaskforxone.ui.location.ImageFragment"
        android:label="ImageFragment" />


</navigation>